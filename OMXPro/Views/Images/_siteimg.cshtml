@model OMXPro.Models.tbl_image 
@if (Model != null && !String.IsNullOrEmpty(Model.imgurl_lg))
{

    <h4>Current Image</h4>
    <div class="form-horizontal">
        <div class="form-group">
            <label for="" class="col-sm-2 control-label"></label>
            <div class="col-sm-10">
                <img id="cmyimg" src='@Url.Content(@Model.imgurl_lg)' alt="@Model.imgtitle" class="img-thumbnail slog" />
            </div>
        </div>
        <div class="form-group">
            <label for="a_img" class="col-sm-2 control-label">Url:</label>
            <div class="col-sm-10">
                <span class="form-control" id="spa_img">@Model.imgurl_lg </span>
            </div>
        </div>


    </div>

}
else
{
    <p>Sorry There is no site logo image.<br/>Please select a new image</p>
}
